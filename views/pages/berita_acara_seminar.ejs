<% if (typeof message !== 'undefined' && message) { %>
  <script>
    alert("<%= message %>");
  </script>
<% } %>

<section class="main-section">
  <h2>Seminar KP</h2>

  <div class="form-wrapper">
    <h3>Berita Acara Seminar</h3>

    <form action="/upload_berita_acara" method="POST" enctype="multipart/form-data" class="kp-form">
      <label for="file_berita_acara">Upload File Berita Acara</label>
      <input type="file" name="file_berita_acara" id="file_berita_acara" required />

      <% if (typeof fileBeritaAcara !== 'undefined' && fileBeritaAcara) { %>
        <p style="color: green; margin-bottom: 10px;">
          File saat ini:
          <a href="/uploads_dokumen/<%= fileBeritaAcara %>" target="_blank">
            <%= namaFileBeritaAcara %>
          </a>
        </p>
      <% } %>

      <p style="margin-top: 10px; font-size: 0.9em; color: gray;">
        Download Format Berita Acara Seminar pada <strong>Dokumen dan Template</strong>
      </p>

      <div class="form-actions">
        <a href="seminar_kp" class="back-btn">‚Üê Back</a>
        <button type="submit" class="submit-btn">Upload Dokumen</button>
      </div>
    </form>
  </div>
</section>
