<section class="main-section">
  <h2>Pengumuman</h2>
<div class="form-container">
  <h3>Edit Pengumuman</h3>

  <form action="/pengumuman/edit/<%= pengumuman.id %>" method="POST">
    <div class="form-group">
      <label for="judul">Judul</label>
      <input type="text" id="judul" name="judul" value="<%= pengumuman.judul %>" required>
    </div>

    <div class="form-group">
      <label for="isi">Isi Pengumuman</label>
      <textarea id="isi" name="isi" rows="5"><%= pengumuman.isi %></textarea>
    </div>

    <div class="form-group">
        <label for="kategori">Kategori</label>
        <select id="kategori" name="kategori" class="form-control input-kecil">
          <option value="Pendaftaran" <%= pengumuman.kategori === 'Pendaftaran' ? 'selected' : '' %>>Pendaftaran</option>
          <option value="Umum" <%= pengumuman.kategori === 'Umum' ? 'selected' : '' %>>Umum</option>
          <option value="Laporan" <%= pengumuman.kategori === 'Laporan' ? 'selected' : '' %>>Laporan</option>
        </select>
      </div>

    <div class="form-group">
        <label for="tglTayang">Tanggal Tayang</label>
        <input type="date" name="tanggal_tayang" id="tanggal_tayang" required>
      </div>

    <div class="form-group">
        <label for="tglBerakhir">Tanggal Berakhir</label>
        <input type="date" name="tanggal_berakhir" id="tanggal_berakhir" required>
      </div>

    
    

 <div class="form-actions">
        <a href="/pengumuman" class="back-btn">← Back</a>
        <button type="submit" class="submit-btn">Simpan Perubahan</button>
      </div>
  </form>
</div>
