<section class="main-section">
  <h2>Pengumuman</h2>
<div class="form-container">
  <h3>Buat Pengumuman</h3>

  <form action="/pengumuman/tambah" method="POST">
    <div class="form-group">
      <label for="judul">Judul</label>
      <input type="text" name="judul" id="judul" required>
    </div>

    <div class="form-group">
      <label for="isi">Isi Pengumuman</label>
      <textarea name="isi" id="isi" rows="5" required></textarea>
    </div>

    <div class="form-group">
      <label for="kategori">Kategori</label>
      <select name="kategori" id="kategori" required>
        <option disabled selected>Pilih</option>
        <option value="Pendaftaran">Pendaftaran</option>
        <option value="Umum">Umum</option>
        <option value="Laporan">Laporan</option>
      </select>
    </div>

    <div class="form-group">
      <label for="tglTayang">Tanggal Tayang</label>
      <input type="date" name="tanggal_tayang" id="tanggal_tayang" required>
      
    </div>

    <div class="form-group">
      <label for="tglBerakhir">Tanggal Berakhir</label>
      <input type="date" name="tanggal_berakhir" id="tanggal_berakhir" required>

    </div>


    

   <div class="form-actions">
        <a href="/pengumuman" class="back-btn">â† Back</a>
        <button type="submit" class="submit-btn">Buat Pengumuman</button>
      </div>

  </form>
</div>
